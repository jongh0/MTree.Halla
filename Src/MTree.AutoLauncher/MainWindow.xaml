<Window x:Class="MTree.AutoLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTree.AutoLauncher"
        mc:Ignorable="d"
        Title="AutoLauncher" Height="116.722" Width="501.822" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Width="300" Height="25" TextAlignment="Center" TextWrapping="Wrap" Text="{Binding Path=LauncherInfo, Mode=OneWay}" IsReadOnly="True" FontSize="12" Padding="5,3,5,0"/>
            <Button Content="Launch Now" Command="{Binding LaunchNowCommand}" Width="Auto" Margin="5,0,0,0" FontSize="12" Padding="5,0,5,0"/>
            <Button Content="Kill All" Command="{Binding KillAllCommand}" Width="Auto" Margin="5,0,0,0" FontSize="12" Padding="5,0,5,0"/>
        </StackPanel>
    </Grid>
</Window>
