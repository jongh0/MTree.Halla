<Window x:Class="MTree.RealTimeProvider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTree.RealTimeProvider"
        mc:Ignorable="d"
        Title="RealTimeProvider" Height="185.28" Width="340.293">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Width" Value="140"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="TextAlignment" Value="Right"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="20"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Padding" Value="2,-1,2,0"/>
                <Setter Property="TextAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>

        <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Consumer Count : "/>
                <TextBox Text="{Binding Path=ConsumerContractCount, Mode=OneWay}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Publisher Count : "/>
                <TextBox Text="{Binding Path=PublisherContractCount, Mode=OneWay}"/>
            </StackPanel>
            <Button Content="Send log to email" Command="{Binding SendLogCommand}" IsEnabled="{Binding Path=CanExecuteSendLog}" Width="120" Height="30" HorizontalAlignment="Right" Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</Window>
